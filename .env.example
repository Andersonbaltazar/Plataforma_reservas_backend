# Variables de entorno del Backend
# Copia este archivo como .env y configura tus valores

# PostgreSQL Database URL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL="postgresql://postgres:password@localhost:5432/hospital_db"

# JWT Secret para autenticación (cambia esto por una clave segura)
JWT_SECRET="tu_clave_secreta_aqui_cambiar_en_produccion"

# Puerto del servidor
PORT=3000

# Ambiente (development | production)
NODE_ENV=development
